// Componente de fila optimizado para la tabla de inventario
export component TableRow inherits Rectangle {
    // Datos de la fila (código, nombre, precio, stock, marca, estado)
    in property <[StandardListViewItem]> row-data;
    in-out property <bool> selected: false;
    
    // Propiedades para animaciones
    in property <bool> hovered: false;
    
    // Estilos
    background: selected ? #e3f2fd : (hovered ? #f5f5f5 : transparent);
    border: selected ? 2px solid #2196f3 : 1px solid #e0e0e0;
    border-radius: 4px;
    height: 40px;
    
    // Animaciones suaves
    animate background 200ms ease-in-out;
    animate border 200ms ease-in-out;
    
    // Contenido de la fila
    HorizontalLayout {
        spacing: 15px;
        padding: 0 15px;
        
        // Código del producto
        Text {
            text: row-data[0].text;
            color: #333;
            font-size: 14px;
            width: 120px;
            vertical-alignment: center;
        }
        
        // Nombre del producto
        Text {
            text: row-data[1].text;
            color: #333;
            font-size: 14px;
            vertical-alignment: center;
            horizontal-stretch: 1.0;
        }
        
        // Precio de venta
        Text {
            text: "$" + row-data[2].text;
            color: #2e7d32;
            font-size: 14px;
            font-weight: 600;
            width: 100px;
            vertical-alignment: center;
            horizontal-alignment: right;
        }
        
        // Stock
        Text {
            text: row-data[3].text;
            color: #666;
            font-size: 14px;
            width: 80px;
            vertical-alignment: center;
            horizontal-alignment: center;
        }
        
        // Marca
        Text {
            text: row-data[4].text;
            color: #666;
            font-size: 14px;
            width: 120px;
            vertical-alignment: center;
        }
        
        // Estado
        Rectangle {
            width: 20px;
            height: 20px;
            background: row-data[5].text == "true" ? #4caf50 : #f44336;
            border-radius: 10px;
            vertical-alignment: center;
        }
    }
    
    // Efectos de hover
    mouse-over => { hovered = true; }
    mouse-out => { hovered = false; }
    
    // Cursor pointer
    cursor: pointer;
}