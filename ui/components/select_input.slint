import { ComboBox } from "std-widgets.slint";

/// Componente de selección con etiqueta integrada (versión compacta)
export component SelectInput inherits Rectangle {
    in property <string> label;
    in property <[string]> model: [];
    in property <int> current-index: 0;
    in property <bool> enabled: true;
    in property <length> input-height: 36px;
    in property <color> label-color: #d3d8e5;
    in property <length> label-font-size: 12px;
    
    property <length> label-height: 16px;
    property <color> normal-border: #5b6480;
    property <color> focus-border: #00d4ff;
    
    VerticalLayout {
        spacing: 1px;
        
        Text {
            text: root.label;
            color: root.label-color;
            font-size: root.label-font-size;
            font-weight: 600;
            height: root.label-height;
        }
        
        Rectangle {
            height: root.input-height;
            border-width: select.has-focus ? 2px : 1px;
            border-radius: 4px;
            border-color: select.has-focus ? root.focus-border : root.normal-border;
            background: root.enabled ? #171b29 : #10131c;

            select := ComboBox {
                model: root.model;
                current-index: root.current-index;
                width: parent.width;
                height: parent.height;
                enabled: root.enabled;
            }
        }
    }
}
